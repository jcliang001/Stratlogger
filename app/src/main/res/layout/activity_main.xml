<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="353dp"
            android:layout_height="139dp"
            android:ems="10"
            android:id="@+id/id_input_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Enter your file name" android:textSize="36dp"
            app:layout_constraintVertical_bias="0.63" android:background="@drawable/border"/>
    <Button
            android:text="SUBMIT"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/btn_submit"
            app:layout_constraintTop_toBottomOf="@+id/id_input_text" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.242" android:textSize="36dp"
            android:background="#673AB7" style="@android:style/Widget.Holo.Button.Borderless"
            android:duplicateParentState="true" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="StratLogger"
            android:layout_width="267dp"
            android:layout_height="129dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.482" app:layout_constraintVertical_bias="0.112"
            android:textSize="48dp"/>
    <ImageView
            android:layout_width="267dp"
            android:layout_height="216dp" app:srcCompat="@mipmap/ic_mines_logo1"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.468" app:layout_constraintVertical_bias="0.316"/>
</android.support.constraint.ConstraintLayout>