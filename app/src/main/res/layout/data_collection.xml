<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="Mud"
            android:layout_width="126dp"
            android:layout_height="200dp"
            android:id="@+id/btn_mud"
            android:background="#FFFFFF"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36dp" android:cursorVisible="true"/>

    <Button
            android:text="Sand"
            android:layout_width="126dp"
            android:layout_height="200dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:id="@+id/btn_sand"
            android:background="#FFFFFF"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:textSize="36dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_other"/>
    <Button
            android:text="OTHER"
            android:layout_width="126dp"
            android:layout_height="200dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:id="@+id/btn_other"
            android:background="#FFFFFF"
            android:layout_marginStart="236dp" app:layout_constraintStart_toStartOf="parent" android:textSize="36dp"/>
    <TextView
            android:text="File Name"
            android:layout_width="198dp"
            android:layout_height="82dp"
            android:id="@+id/id_file_display"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp" android:gravity="center"
            android:background="@drawable/border"
            android:textSize="24dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/id_layer_count"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_note"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="84dp"
            android:id="@+id/id_layer_count"
            android:gravity="center" android:background="@drawable/border"
            android:textSize="24dp" android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_note"/>
    <Button
            android:text="Save"
            android:layout_width="137dp"
            android:layout_height="80dp"
            android:id="@+id/btn_save"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            android:textSize="30dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/id_file_display"
            android:background="#009688" style="@android:style/Widget.Material.Button.Colored"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="END OF RUN"
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:id="@+id/btn_end"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            app:layout_constraintStart_toEndOf="@+id/btn_save" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.808" android:textSize="24dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/id_layer_count" android:background="#F44336"
            style="@android:style/Widget.Material.Button.Colored" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="469dp"
            android:layout_height="54dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/id_thickness"
            android:hint="@string/thickness_input" android:layout_marginTop="400dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.305"
            android:background="@drawable/border" android:textSize="24dp"/>
    <EditText
            android:layout_width="467dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_bed"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border" android:hint="Bed ID" android:textSize="24sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.969" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/id_thickness"/>
    <Button
            android:text="Photo"
            android:layout_width="155dp"
            android:layout_height="64dp"
            android:id="@+id/btn_camera"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="36dp" app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_other"/>
    <EditText
            android:layout_width="471dp"
            android:layout_height="124dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/id_note" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/id_bed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintVertical_bias="0.0" android:background="@drawable/border" android:hint="Note"
            android:textSize="24dp"/>
</android.support.constraint.ConstraintLayout>